{
  "version": 2,
  "name": "b2bbilling-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://b2bbillings.onrender.com/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "build": {
    "env": {
      "VITE_API_URL": "https://b2bbillings.onrender.com/api",
      "VITE_WS_URL": "https://b2bbillings.onrender.com",
      "VITE_SOCKET_URL": "https://b2bbillings.onrender.com",
      "VITE_APP_NAME": "Shop Management System",
      "VITE_APP_VERSION": "2.1.0",
      "VITE_NODE_ENV": "production",
      "VITE_ENABLE_DEBUG": "false",
      "VITE_ENABLE_ANALYTICS": "true",
      "VITE_API_TIMEOUT": "30000"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
}